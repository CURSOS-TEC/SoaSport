<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/launcher.theme.colorPrimary</item>
        <item name="colorPrimaryDark">@color/sea.foam.green</item>
        <item name="colorAccent">@color/sea.foam.green</item>
        <item name="android:windowBackground">@drawable/auth_background</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/launcher.theme.colorPrimary</item>
        <item name="colorPrimaryDark">@color/sea.foam.green</item>
        <item name="colorAccent">@color/sea.foam.green</item>
        <item name="android:windowBackground">@drawable/screen</item>
    </style>


